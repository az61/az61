/**** Main Styles ****/
.main{ padding:  0em 0.625em; padding-top: 1em;}
.main.row{ width: 95%}
.main h2 {color: #7a1716; border-bottom: 2px solid #7a1716;}

a.next,
a.button{
	background-color: #7a1716;
	color: #ffffff;
	padding: 0.4em 1em;
	border: 1px solid #d3d3d3;
	font-weight: normal;
}

/*****Lightboxes*/
.popup{box-shadow: none!important; border-radius: 0 0 0 0;}
.button.b-close, .button.bClose{
	border-radius: 0 0 0 0;
	background-color: #7a1716;
	font-size: 1.313em;
	padding: 0.313em 0.625em;
	top: -15px;
	right: -15px;
}


.ui-dialog{border-radius: 0 0 0 0;}
.ui-dialog .ui-widget-header{background-color: #7a1716; background-image: none!important; color: #fff; border-radius: 0 0 0 0;}
.ui-dialog #txLessonName{width: 95%;}
.ui-dialog-buttonset .ui-state-default,
.ui-dialog-buttonset .ui-widget-content .ui-state-default,
.ui-dialog-buttonset .ui-widget-header .ui-state-default{background-color: #898d90!important; color: #ffffff; background-image: none;}

/******Form Styles*/
input[type=text], select, textarea{ border: 1px solid #898d91; color: #111111; min-height: 1.875em; padding: 0.225em; }

/*Button*/

input.ui-button, button.ui-button {color: #ffffff; background-image: none; border-radius: 0; }
button.ui-button.inactive { background-color: #898d91; color: #535353; border-color: #898d91; cursor: default; }

.bottom-buttons{height: 3.125em; width: 100%;}
.bottom-buttons li{display: inline-block;width: 25%; height: 3.125em;text-align: center;}
.bottom-buttons li.button a{display: inline-block;; text-align: center;}
/*.bottom-buttons img.bottomIcon {width: 25%!important;height: auto!important;padding: 0.313em 2em;}*/
.bottom-buttons .button.active{background-color: #ffffff;}

.bottom-buttons li.button {height: 3.125em!important;}


.form-action-buttons{
	position: fixed;
	bottom: 3.25em;
	background-color: #323232;
	width: 100%;
	border-top: 1px solid #898d91;
	padding: 0.625em 0;	
	text-align: center;
	
}
.rslides_nav.rslides1_nav.next,
.form-button{
	background-color: #7a1616!important;
	border: 1px solid #515547!important;
	width: 95%;
	padding: 0.625em!important;
	color: #ffffff!important;
	text-transform: uppercase;
	font-size: 1em;	
	margin-bottom: 0.625em;
}
.form-button-half{
	width: 95%;
	background: none;
	border: none;
	color: #ffffff;
	border-bottom: 1em solid #ffffff;
	text-transform: uppercase;
	font-size: 1em;
}

/**** Home ****/
.top { background-color: #7a1716; height: 2.313em; border-bottom: 2px solid #fff; }
.top img{margin-top: 0.625em}
.bottom{background-color: #7a1716;}
.bottom ul.bottom-buttons li{border-top: 2px solid #ffffff;}
.bottom ul.bottom-buttons li.active{border-top: 2px solid #7a1616}

.container,
.container.home{background: url(../img/app-bg-main.png) no-repeat right bottom #333333; color: #ffffff;}
.container.home .main ul.buttons a{color: #ffffff; background: url(../img/bg_content_trans.png) repeat top right; border: 1px solid #5a5a5a; padding: 1em 0.625em;}

/**** Longterm ****/
.container.longterm .question span.header,
.container.test .question span.header { background: url(../img/default/h2_vocabulary.png) no-repeat; }
.container.longterm .answer span.header,
.container.test .answer span.header { background: url(../img/default/h2_translation.png) no-repeat; }

.longtermList.longtermContainer,
.longtermLearn,
.testContainer {background-color: rgba(255,255,255,0.3); padding: 0.625em;}

.container.longterm h1,
.container.test h1 {
	color: #7a1716;
	font-size: 1.625em;
	margin-bottom: 0.625em;
	text-transform: uppercase;
	border-bottom: 2px solid #7a1716;
	padding: 0.313em;
}

/****** Test */
.container.test .summaryTest span.headerSum { background: url(../img/default/h2_summary.png) no-repeat; height: 22px; min-width: 156px; }


/******Lessons*/
.main.lesson-page{padding-bottom: 200px;}
p.info{color: #ffffff; background: url(../img/bg_content_trans.png) repeat top right; border: 1px solid #5a5a5a; padding:0.625em;}

ul.lesson{}
ul.lesson li{
	margin-bottom: 0.525em;
	border: 1px solid #5a5a5a;
	background: url(../img/bg_content_trans.png) repeat top right; 
	padding: 0.625em;
	width: 95%;	
	position: relative;
}

ul.lesson .lessonName{font-size: 1.313em; text-transform: uppercase;}
ul.lesson .lessonMenuIcon{position: absolute; right: 0.625em; top:0.375em;}

.wrapper-container{text-align: center; width: 100%;}
input#txCategoryName{width: 90%; margin-bottom: 1em;}

.category .cat{margin-bottom: 1.625em;}
.deleteCategoryIcon{float: right; margin-top: -3em; max-width: 30px; max-height: 30px;}
.cat-title{font-size: 1.25em; text-transform: uppercase; display: block; border-bottom: 5px solid #ffffff;}

button.addLessonClick{margin: 1.25em 0; background: none; border: none; border-top: 5px solid #8e3a39; width: 100%; margin-top: 0px; font-weight:bold}
.addLessonClick .ui-button-text{color: #8e3a39; text-transform: uppercase; font-size: 1em; text-align: right; padding: 0;}

/******Edit Lessons*/
.vocabulary {margin-top: 1.25em;}
#searchField{width: 85%; margin-right: 0.625em}

thead{text-align: left; }
thead th{padding: 0.625em 0 0; color: #7a1716; border-bottom: 2px solid #7a1716;}

.question, .answer{padding: 0.313em;}

.alternate { background-color: #4d4d4d; }

.vocabulary .isLongterm{margin: 0.313em;}

.ui-dialog fieldset{padding: 0.313em;}
.ui-dialog fieldset input,
.ui-dialog fieldset label{ float: left; clear: both;}

.ui-dialog fieldset label{margin: 0.313em 0;}
.ui-dialog fieldset #txVocabQuestion, .ui-dialog fieldset #txVocabAnswer{width: 95%;}
.ui-dialog-content {height: auto!important;}

#create-vocabulary{
	background-color: #7a1616;
	border: 1px solid #515547;
	width: 100%;
	padding: 0.625em 0;
	color: #ffffff;
	text-transform: uppercase;
	font-size: 1em;
	margin-bottom: 0.625em;
}
#create-vocabulary span{padding: .4em 1em}

.lesson-head{}
.lessonContent .lessonName{}
.lessonContent .categoryName{margin-left: 0.625em}

.lessonContent .lessonName,
.lessonContent .categoryName{
	display: inline-block;
	padding: 0.625em!important;
	border: 1px solid #5a5a5a!important;
	text-transform: uppercase;
	background: url(../img/bg_content_trans.png) repeat top right; 
}
.lessonContent table.tablesorter{
	border: 1px solid #5a5a5a!important;
	background: url(../img/bg_content_trans.png) repeat top right; 
	border-spacing: 0!important;
}
.lessonContent thead th{color: #8e3a39!important; border-bottom: 2px solid #8e3a39; text-transform: uppercase; padding: 0.313em!important}
.lessonContent table.tablesorter td{padding: 1em 0.313em;}

/******userSettings*/
.userSettings-container h2{
	color: #ffffff;	
	text-transform: uppercase;
	border-bottom: 5px solid #ffffff;
	margin: 0;
	padding: 0;
}

#userSettings {	
	border: 1px solid #5a5a5a!important;
	background: url(../img/bg_content_trans.png) repeat top right;
	padding: 0.625em;
}

#userSettings h3{margin: 1.5em 0 0.625em;}
#userSettings .user select#user{margin-right: 0.625em; width: 80%;}

#userSettings .holiday .holiday-wrapper{
	background-color: #333;
	padding: 6px 5px 3px;
	width: 13px;
	display: block;
	margin-top: 0.625em;	
}
#userSettings .holiday .holiday-wrapper input{min-height: 13px; padding: 0;}
#userSettings .addUser{margin-top: -0.313em; margin-right: 1em}
#userSettings .userSelect{padding: 0.625em; width: 75%!important;}

#userSettings .user{margin: 0}

#userSettings .userpassword{width: 100%;}
#userSettings input#password_confirm,
#userSettings input.password{width: 100%; height: 30px;}
#userSettings .password-meter{width: 100%; border: 2px solid #5a5a5a!important;}
.password-meter-bg .password-meter-strong{width: auto!important}

#userSettings .intervall-input{margin-bottom: 0.625em; width: 97%;}

#userSettings .form-button-half{width: 99%;}

.fixed-button{
	position: fixed;
	bottom: 3.15em;
	padding: 0.625em 0;
	border-top: 1px solid #898d91;
	background-color: #323232;
	width: 100%;
	text-align: center;
}

.userSettings-container {padding-bottom: 60px;}

.main .container-content .form-button{
	width: 100%;
}

/****** LONG TERM*/

.test .main h1,
.longterm .main h1{
	color: #ffffff;	
	text-transform: uppercase;
	border-bottom: 5px solid #ffffff;
	margin: 0;
	padding: 0;	
}

.testContainer,
.longtermLearn,
.longtermList.longtermContainer{
	border: 1px solid #5a5a5a!important;
	background: url(../img/bg_content_trans.png) repeat top right;
	padding: 0.625em;
}
.longtermList li{text-transform: uppercase; background-color: #7a1716; padding: 0.313em}
.longtermList span{display: inline-block}
.enterLongtermIcon{padding: 0!important;}
.enterLongterm{float: right;}

.vocabLevel{
	display: block;
	text-align: right;
	width: 100%;
}
.testContainer span.header
.longtermContent span.header{display: block!important}
.longtermContent input.longterm{
	margin: 0!important;
	width: 100%!important;
}
.longtermContent .question, .longtermContent .answer{padding: 0!important;}
.checkAnswer{width: 100%!important;}

.rslides_nav.rslides1_nav.next{display: block; text-align: center; width: 95%;}
p.red{
	background-color:#d6a9a9;
	color: #8e3a39;
	border: 1px solid #8e3a39;
	text-align: center;
	padding: 0.625em 2em;
	margin-bottom: 1.625em;	
	font-weight: bold;
}
p.green{
	background-color:#c0d6a9;
	color: #73885c;
	border: 1px solid #73885c;
	text-align: center;
	padding: 0.625em 2em;
	margin-bottom: 1.625em;	
	font-weight: bold;
}

/***** Classtest-modus*/

.testContainer .enterTest{
	background-color: #7a1616;
	border: 1px solid #515547;
	width: 100%;
	padding: 0.625em;
	color: #ffffff;
	text-transform: uppercase;
	font-size: 1em;	
	margin-bottom: 0.625em;
}
.testContainer .enterTest.inactive{
	background-color: #898d91;
	border: 1px solid #515547;
	color: #333333;
}
.testContainer .cat-title{padding: 1.25em 0 0 3em!important; background: url(../img/folder_closed_small.png) no-repeat left bottom;}

.testContainer ul.testList{margin: 1.625em 0;}
.testContainer ul.testList li ul{margin-bottom: 0.625em;}

.testContainer .lesson{padding: 0.625em 0.313em!important;}
.testContainer .lessonTitle{
	font-weight: bold;
	font-size: 1em;
	text-transform: uppercase;
	vertical-align: text-bottom;
}

.testContainer .header{display: block!important}

.testContainer input.test{width: 100%!important; margin: 0.625em 0 0 0!important;}

.button.finish{margin-top: 0.625em}

.wrong.red{
	color: #8e3a39;
	text-transform: uppercase;
	border-bottom: 10px solid #8e3a39;
	margin-bottom: 1em;
	float: none;	
	font-size: 1em;
}

.right.green{
	color: #73885c;
	text-transform: uppercase;
	border-bottom: 10px solid #73885c;
	margin-bottom: 1em;
	float: none;
	font-size: 1em;	
}

.summaryTest{margin-top: 1em}
.testSummary .text{margin-right: 1.625em; width: 7em; display: inline-block;}
.testSummary .counter{margin-right: 1.625em; width: 7em; display: inline-block;}

.testLearn .button.finish,
.testSummary .button.back-button{display: block; text-align: center}
