	<body>
	    <div class="container user">
    		<div class="top row">			
    		</div>
    		<div class="main row">
    			<form id="userSettings" method="get" action="">
    			    <h2>Benutzereinstellungen</h2>
    			    <div class="user">
    			        <h3>Wähle einen Benutzer aus oder füge durch Klick auf "+" einen neuen hinzu.</h3>
    			        <label for="user">Benutzer auswählen</label>
                        <select name="user" id="user" class="userSelect">
                            <option value="choose">---</option>
                        </select>
                        <span class="addUser pointer"><img src="img/personAdd.png" /></span>
                        <span class="deleteUser pointer"><img src="img/delete.png" /></span>
                        <div class="clear"></div>                            			        			        
    			    </div>
    			    
    			    <div class="userLessons">
    			        <h3>Weise dem Benutzer Lektionen zu</h3>
    			        <span class="addUserLessons pointer"><img src="img/line_note.png" /></span>	  
    			        <span class="checkedLessons hidden"></span>      			        
    			    </div>
    			    
    			    <div class="passwords">
                        <h3>Benutzer-Passwort festlegen</h3>
            			<table>
                            <tr>
                               <td>
                                   <label for="password">Neues Passwort</label>
                                   <input type="password" class="password" name="password" id="password" />
                               </td>
                               <td class="status">
                                    <div class="password-meter">
                                        <div class="password-meter-message"> </div>
                                        <div class="password-meter-bg">
                                            <div class="password-meter-bar"></div>
                                        </div>
                                    </div>
                               </td>
                            </tr>
                            <tr>
                               <td><label for="password_confirm">Passwort wiederholen</label>
                               <input type="password" name="password_confirm" id="password_confirm" /></td>
                               <td class="status"></td>
                            </tr>
                       </table>
                    </div>
                    
