/**** Main Styles ****/
.main{ padding:  0em 0.625em}
.main.row{ width: 95%}
.main h2 {color: #7a1716; border-bottom: 2px solid #7a1716;}

a.next,
a.button{
	background-color: #7a1716;
	color: #ffffff;
	padding: 0.4em 1em;
	border: 1px solid #d3d3d3;
	font-weight: normal;
}

/*****Lightboxes*/
.popup{box-shadow: none!important; border-radius: 0 0 0 0;}
.button.b-close, .button.bClose{
	border-radius: 0 0 0 0;
	background-color: #7a1716;
	font-size: 1.313em;
	padding: 0.313em 0.625em;
	top: -15px;
	right: -15px;
}


.ui-dialog{border-radius: 0 0 0 0;}
.ui-dialog .ui-widget-header{background-color: #7a1716; background-image: none!important; color: #fff; border-radius: 0 0 0 0;}
.ui-dialog #txLessonName{width: 95%;}
.ui-dialog-buttonset .ui-state-default,
.ui-dialog-buttonset .ui-widget-content .ui-state-default,
.ui-dialog-buttonset .ui-widget-header .ui-state-default{background-color: #898d90!important; color: #ffffff; background-image: none;}

/******Form Styles*/
input[type=text], select, textarea{ border: 1px solid #898d91; color: #111111; min-height: 1.875em; padding: 0.225em; }

/*Button*/
input.ui-button, button.ui-button { background-color: #7a1716; color: #ffffff; background-image: none; border-radius: 0; }
button.ui-button.inactive { background-color: #898d91; color: #535353; border-color: #898d91; cursor: default; }

.bottom-buttons{height: 3.125em; width: 100%;}
.bottom-buttons li{display: inline-block;width: 25%; height: 3.125em;text-align: center;}
.bottom-buttons li.button a{display: inline-block;; text-align: center;}
/*.bottom-buttons img.bottomIcon {width: 25%!important;height: auto!important;padding: 0.313em 2em;}*/
.bottom-buttons .button.active{background-color: #ffffff;}

.bottom-buttons li.button {height: 3.125em!important;}



/**** Home ****/
.top { background-color: #7a1716; height: 2.313em; border-bottom: 2px solid #fff; }
.top img{margin-top: 0.625em}
.bottom{background-color: #7a1716; border-top: 2px solid #fff;}

.container,
.container.home{background: url(../img/app-bg-main.png) no-repeat right bottom #333333; color: #ffffff;}
.container.home .main ul.buttons a{color: #ffffff; background: url(../img/bg_content_trans.png) repeat top right; border: 1px solid #5a5a5a; padding: 1em 0.625em;}

/**** Longterm ****/
.container.longterm .question span.header,
.container.test .question span.header { background: url(../img/default/h2_vocabulary.png) no-repeat; }
.container.longterm .answer span.header,
.container.test .answer span.header { background: url(../img/default/h2_translation.png) no-repeat; }

.longtermList.longtermContainer,
.longtermLearn,
.testContainer {background-color: rgba(255,255,255,0.3); padding: 0.625em;}

.container.longterm h1,
.container.test h1 {
	color: #7a1716;
	font-size: 1.625em;
	margin-bottom: 0.625em;
	text-transform: uppercase;
	border-bottom: 2px solid #7a1716;
	padding: 0.313em;
}

/****** Test */
.container.test .summaryTest span.headerSum { background: url(../img/default/h2_summary.png) no-repeat; height: 22px; min-width: 156px; }


/******Lessons*/

ul.lesson{padding: 0.625em;}
ul.lesson li{
	margin-bottom: 0.525em;
	border-top: 2px solid #fff;
	border-right: 2px solid #fff;
	border-left: 2px solid #fff;
	background-color: rgba(255,255,255,0.3);
	padding: 0.625em;
	width: 90%;	
	position: relative;
}
ul.lesson li.last {border-bottom: 2px solid #fff;}

ul.lesson .lessonName{font-size: 1.313em; text-transform: uppercase;}
ul.lesson .lessonMenuIcon{position: absolute; right: 0.625em; top:0.375em;}

.wrapper-container{text-align: center; width: 100%;}
input#txCategoryName{width: 90%; margin-bottom: 1em;}

.deleteCategoryIcon{float: right; margin-right: 1.625em}
.cat-title{font-size: 1.313em; margin-left: 0.625em;}

button.addLessonClick{margin: 0.625em 0;}

.form-action-buttons{
	position: fixed;
	bottom: 3.25em;
	background-color: #323232;
	width: 100%;
	border-top: 1px solid #898d91;
	padding: 0.625em 0;	
	text-align: center;
	
}
.form-button{
	background-color: #7a1616;
	border: 1px solid #515547;
	width: 95%;
	padding: 0.625em;
	color: #ffffff;
	text-transform: uppercase;
	font-size: 1.25em;	
	margin-bottom: 0.625em;
}
.form-button-half{
	width: 95%;
	background: none;
	border: none;
	color: #ffffff;
	border-bottom: 1em solid #ffffff;
	text-transform: uppercase;
	font-size: 1em;
}

/******Edit Lessons*/
.vocabulary {background-color: rgba(255,255,255,0.3); padding: 0.25em; margin-top: 1.25em;}
#searchField{width: 85%; margin-right: 0.625em}

thead{text-align: left; }
thead th{padding: 0.625em 0 0; color: #7a1716; border-bottom: 2px solid #7a1716;}

.lessonContent .lessonName, .lessonContent .categoryName{
	background-color: #333;
	color: #fff;
	text-transform: uppercase;
	padding: 0.625em!important;
	margin-right: 0.313em;
	display: inline-block;
}
.question, .answer{padding: 0.313em;}

.alternate { background-color: #4d4d4d; }

.vocabulary .isLongterm{margin: 0.313em;}

.ui-dialog fieldset{padding: 0.313em;}
.ui-dialog fieldset input,
.ui-dialog fieldset label{ float: left; clear: both;}

.ui-dialog fieldset label{margin: 0.313em 0;}
.ui-dialog fieldset #txVocabQuestion, .ui-dialog fieldset #txVocabAnswer{width: 95%;}
.ui-dialog-content {height: auto!important;}


/******userSettings*/
#userSettings {background-color: rgba(255,255,255,0.3); padding: 0.625em;}

#userSettings label{margin: 0.625em 0;}
#userSettings .user select#user{margin-right: 0.625em; width: 80%;}

#userSettings .holiday .holiday-wrapper{
	background-color: #333;
	padding: 6px 5px 3px;
	width: 13px;
	display: block;
	margin-top: 0.625em;	
}
#userSettings .holiday .holiday-wrapper input{min-height: 13px; padding: 0;}

#userSettings .addUser{margin-top: -0.313em;}

