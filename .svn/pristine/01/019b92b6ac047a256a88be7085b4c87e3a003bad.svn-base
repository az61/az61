/**** Longterm ****/
.container.longterm .question span.header { background: url(../img/default/h2_vocabulary.png) no-repeat; }
.container.longterm .answer span.header { background: url(../img/default/h2_translation.png) no-repeat; }

.top{background-color: #7a1716; height: 1.825em; border-bottom: 2px solid #fff;}
.bottom{background-color: #7a1716; border-top: 2px solid #fff;}

.container,
.container.home{background: url(../img/app-bg-main.png) no-repeat bottom right #333333; color: #ffffff;}
.container.home .main ul.buttons a{text-shadow: 2px 1px 0px #7a1716;  color: #ffffff}

/******Lessons*/

ul.lesson{padding: 0.625em;}
ul.lesson li{
	margin-bottom: 0.525em;
	border-top: 2px solid #fff;
	border-right: 2px solid #fff;
	border-left: 2px solid #fff;
	background-color: rgba(255,255,255,0.3);
	padding: 0.625em;
	width: 90%;	
}
ul.lesson li.last {border-bottom: 2px solid #fff;}

ul.lesson .lessonName{}

.wrapper-container{text-align: center; width: 100%;}
.wrapper-container .wrapper{text-align: right; margin-right: 1em;}
input#txCategoryName{width: 90%; margin-bottom: 1em;}


/******Form Styles*/
input, select, textarea{border: 1px solid #898d91; color: #111111; min-height: 1.875em; padding: 0.225em;}

/*Button*/
input.ui-button, button.ui-button{background-color: #7a1716; color: #ffffff; background-image: none; border-radius: 0;} 

