* { margin: 0; padding: 0; }

body, html { width: 100%; height: 100%; }

body { font-family: verdana, sans-serif; font-size: 16px; }

h1 { color: #000; font-size: 1em; }

ul.buttons { width: 100%; margin: 0 auto; text-align: center; }

li { list-style-type:none; }

li a { text-align: left; }

a { text-decoration: none; color: #000; }

.row { max-width: 60em; margin: 0 auto; width: 100%; }

.left { float: left; }
.right { float: right; }
.clear { clear: both; }

.toggle,
.pointer { cursor: pointer; }

.alternate { background-color: #ccc; }

.popup {
	background-color: #FFFFFF;
    border-radius: 0.625em;
    box-shadow: 0 0 1.563em 0.313em #999999;
    color: #111111;
    display: none;
    padding: 0.938em;
}

.hidden { display:none; }

.button.b-close, 
.button.bClose {
	border-radius: 0.438em;
	background-color: #941e34;
	color: #fff;
    box-shadow: none;
    padding: 0 6px 2px;
    position: absolute;
    right: -7px;
    top: -7px;
    cursor: pointer;
    display: inline-block;
}



ul.lesson li { 
	border-top: 2px solid #000;
	border-right: 2px solid #000;
	border-left: 2px solid #000;
	width: 80%;
	padding: 0.188em;
	margin: 0 auto;
	margin-bottom: 0.125em;
}

ul.lesson li.last { border-bottom: 2px solid #000; }

.lessonEditMenu { display: none; }

.lessonContent span.border { border: 1px solid #000; padding: 0.125em; }

/****** Top Styles ******/

.top { 
	background: url(../img/background.png) transparent repeat-x; 
	height: 3.563em; 
	margin-bottom: 1.563em; 
}

.top .right img { max-height: 38px; } 

/****** Main Content Styles ******/
.main { clear: both; font-size: 0.75em; }

.main h2 { 
	color: #941e34;
	font-size: 1em;
	margin-bottom: 0.938em;   
}

.main h3 { 
	font-size: 0.813em; 
	font-style: italic;
	margin-bottom: 0.313em;
}

/* Home */
.container.home { background: url(../img/bg_lines.jpg) no-repeat; position: relative; }
.container.home .main ul.buttons { position: absolute; top: 150px; right: 0.625em; }

.container.home .main li.button { margin-bottom: 1.625em; }

.container.home .main li.button a {
	color: #fff;
	font-size: 2em;
	font-weight: bold; 
	text-align: right;	 
	text-transform: uppercase;
	display: block;
	text-shadow: 1px 1px 0px #aaa; 
}

.main div { margin-bottom: 0.938em;  }

.main label { display: block; }

.main table.tablesorter,
.main table.longtermList { width: 100%; }

.container {
	padding-bottom: 65px;
	min-height: 100%;
	overflow: hidden;	
}

button#searchSubmit { 
	background: url(../img/line_search.png) transparent no-repeat;
	background-size: 20px;
	border: 0 !important;
	width: 25px;
	height: 25px;
}

/* Icons / Images */
img.lessonMenuIcon,
img.vocabEditMenuIcon,
img.folderIcon,
img.deleteIcon { width: 20px; height: 20px; padding: 0.125em; }

img.addIcon,
img.editIcon,
img.deleteIcon,
img.renameIcon,
img.enterLongtermIcon { width: 16px; height: 16px; padding: 0.125em; }

/* User Setting Styles */
select.userSelect, 
span.addUser,
input#newUser,
span.close { float:left; }

.container.user .addUser img, 
.container.user .close img,
.container.user .addUserLessons img { width: 22px; height: 22px; }

.container.user p.date { background-color: #999999; color: #555555; padding: 2px; border: 1px solid #767273; width: 125px; }

#userSettings label.error {
  background:url(../img/validator/unchecked.png) no-repeat 0px 0px;
  font-weight: bold;
  color: #EA5200;
}

#userSettings label.checked {
  background:url(../img/validator/checked.png) no-repeat 0px 0px;
}

.password-meter, 
.password-meter div { margin-bottom: 0 !important; }

/* Longterm Styles */
.container.longterm input.longterm { width: 15.625em; height: 4.688em; }
.container.longterm span.header { width: 75px; height: 22px; display: inline-block; }

.container.longterm .vocabulary input { color: #008000; }
.container.longterm .translation input { color: #941E34; }

.container.longterm a.prev { display:none; }

.container.longterm .longtermLearn { display:none; }

/****** Bottom Styles ******/

div.bottom { 
	background: url(../img/background.png) transparent repeat-x;
	position: fixed;
	bottom: 0;
	height: 50px;
}

div.bottom li {	
	float: left;
	height: 50px; 
}

div.bottom li.button { height: 25px;  }

div.bottom li.button a { display: block; }

div.bottom li.bottomMenuBorder { background: url(../img/bottomMenuBorder.png) transparent no-repeat; }

div.bottom img.bottomIcon { width: 25px; height: 25px; padding: 0.781em 2em; }